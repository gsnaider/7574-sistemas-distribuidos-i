<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="contabilidapp-unit" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>ar.uba.fi.contabilidapp.upload.model.Client</class>
        <class>ar.uba.fi.contabilidapp.upload.model.Transaction</class>
        <class>ar.uba.fi.contabilidapp.upload.model.InputFile</class>
        <class>ar.uba.fi.contabilidapp.upload.model.Upload</class>

        <properties>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="mysql"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/contabilidapp?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>